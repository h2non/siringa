root = true

[*.{py,rst,txt}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = LF

[*.{hy}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = LF

[*.yml]
indent_style = space
indent_size = 2
end_of_line = LF

[Makefile]
indent_style = tab
indent_size = 2
